<head>
<meta charset="utf-8">
<title>Paper Stack</title>
<link rel="stylesheet" type="text/css" href="/assets/login.css" />
</head>
<body>
<div class="container">
	<section id="content">

		<%= form_for(@user) do |f| %>

		  <h1>Sign Up Form</h1>
		  <div>
	      <%= f.text_field :name, :placeholder => "Enter name" %>
	      </div>

	      <div>
	      <%= f.email_field :email, :placeholder => "Enter email" %>
	      </div>

	      <div>
	      <%= f.password_field :password, :placeholder => "Enter password" %>
	      </div>

	      <div>
	      <%= f.password_field :password_confirmation, :placeholder => "Re-enter password" %>
	      </div>

	      <div>
	      <%= f.submit "Submit" %>
	      </div>
	    <% end %>
	</section><!-- content -->
</div><!-- container -->
</body>
</html>
